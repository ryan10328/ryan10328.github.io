---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';

export interface Props {
    title: string;
    description: string;
    image?: string;
    ogType?: string;
    pubDate?: Date;
    updatedDate?: string;
    tags?: string[];
}

const {title, description, image = '/profile.webp', ogType = 'website', pubDate, updatedDate, tags} = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8"/>
<meta name="viewport" content="width=device-width,initial-scale=1"/>
<link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
<meta name="generator" content={Astro.generator}/>

<!-- Canonical URL -->
<link rel="canonical" href={Astro.url.href}/>

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title}/>
<meta name="description" content={description}/>

<!-- Open Graph / Facebook -->
<meta property="og:type" content={ogType}/>
<meta property="og:url" content={Astro.url}/>
<meta property="og:title" content={title}/>
<meta property="og:description" content={description}/>
<meta property="og:image" content={new URL(image, Astro.url)}/>
<meta property="og:locale" content="zh_TW"/>

{ogType === 'article' && pubDate && (
    <>
        <meta property="article:published_time" content={pubDate.toISOString()}/>
        {updatedDate && <meta property="article:modified_time" content={new Date(updatedDate).toISOString()}/>}
        <meta property="article:author" content="Ryan Tseng"/>
        {tags && tags.map(tag => <meta property="article:tag" content={tag}/>)}
    </>
)}

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image"/>
<meta property="twitter:url" content={Astro.url}/>
<meta property="twitter:title" content={title}/>
<meta property="twitter:description" content={description}/>
<meta property="twitter:image" content={new URL(image, Astro.url)}/>
<meta name="twitter:creator" content="@ryan10328"/>
<meta name="twitter:site" content="@ryan10328"/>

<!-- Google Search Console -->
<meta name="google-site-verification" content="CMfXnYCf5G-gltVOI18NCyjbE5gOkpskShPBCs81S0U"/>

<!-- GA -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-7GZPSNC22Y"></script>
<script>
    window.dataLayer = window.dataLayer || [];

    function gtag() {
        dataLayer.push(arguments);
    }

    gtag('js', new Date());
    gtag('config', 'G-7GZPSNC22Y');
</script>


